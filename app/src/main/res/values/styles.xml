<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textInputStyle">@style/AppTextField</item>
    </style>

    <style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:letterSpacing">@dimen/default_letter_spacing</item>
    </style>

    <style name="FilledButton" parent="Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EmptyButton" parent="Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="EmptyTransparentButton" parent="EmptyButton">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="ErrorHintAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <style name="DefaultHintAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="RoundBottomSheet" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="bottomSheetStyle">@style/RoundBottomSheet</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/s7_green</item>
    </style>

</resources>
