<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button"/>

    <style name="PrimaryButton" parent="Button">
        <item name="android:layout_height">68dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cornerRadius">6dp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ErrorHintAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <style name="DefaultHintAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
